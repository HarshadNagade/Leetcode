class Solution {
public:
    int numberOfAlternatingGroups(vector<int>& colors) {
        int n=colors.size();
        vector<int>v;
        for(int i=0;i<n;i++)
        colors.push_back(colors[i]);

        int c=0;
        for(int i=0;i<n;i++){
            if(colors[i]==colors[i+2] && colors[i]!=colors[i+1])
            c++;
        }    
        // for(int i=0;i<colors.size();i++)
        // cout<<colors[i]<<" ";
        return c;    
    }
};  
