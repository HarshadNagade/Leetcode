class Solution {
public:
    int countNegatives(vector<vector<int>>& grid) {
        int a=grid.size();
        int b=grid[0].size();
        int c=0;
        for(int i=0;i<a;i++){
            for(int j=0;j<b;j++){
                if(grid[i][j]<0){
                    c++;
                }
            }
        }
        return c;
    }
};
