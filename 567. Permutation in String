class Solution {
public:
    bool checkInclusion(string s1, string s2) {
        int n=s1.size(), m=s2.size();
        if(n>m)return 0;
        int c1[26]={0},c2[26]={0};
        
        for(int i=0;i<n;i++){
            c1[s1[i]-'a']++;
            c2[s2[i]-'a']++;
        }
        if(equal(c1,c2)) return 1;

        for(int i=n;i<m;i++){
            c2[s2[i]-'a']++; // add new char
            c2[s2[i-n]-'a']--; // remove old char
            if(equal(c1,c2)) return 1;
        }
        return 0;
    }
    
        bool equal(int a[26],int b[26]){
            for(int i=0;i<26;i++){
            if(a[i]!=b[i]) return 0;
            }
        return 1;
    }
};
