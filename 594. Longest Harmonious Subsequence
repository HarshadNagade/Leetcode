class Solution {
public:
    int findLHS(vector<int>& nums) {
        sort(nums.begin(),nums.end());
        int maxl=0,c = 0;

        for (int i = 0; i < nums.size(); i++) {
            while(nums[i]-nums[c]>1)
                c++;
            
        if(nums[i]-nums[c]==1){
            maxl=max(maxl,i-c+1);
        }
        }
        return maxl;
    }
};
